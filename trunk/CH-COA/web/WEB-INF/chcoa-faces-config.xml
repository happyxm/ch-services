<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<el-resolver>com.chfaces.el.ELResolverWrapper</el-resolver>
		<message-bundle>com.chcoa.messages</message-bundle>
		<locale-config>
			<default-locale>zh_CN</default-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>zh_CN</supported-locale>
			<supported-locale>zh_TW</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>com.chcoa.resources</base-name>
			<var>rss</var>
		</resource-bundle>
	</application>
	
	<lifecycle>
		<phase-listener>com.chfaces.application.phaselistener.ChServicePhaseListener</phase-listener>
	</lifecycle>
	<converter>
		<converter-id>StringToLocaleConverter</converter-id>
		<converter-class>com.chfaces.converter.StringToLocaleConverter</converter-class>
	</converter>
	
</faces-config>